!!!
%html{ :lang => "en" }
  %head
    %meta{ :content => "text/html charset=utf-8", "http-equiv" => "Content-Type" }
    %title Pandemic ROI Prototype
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'style.css', 'facelist.css', 'overlay.css'
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    - unless Status.user_today(current_user)
      = javascript_tag "var OVERLAY = true;"
    = javascript_include_tag 'jquery-1.3.2.min.js', 'jquery.autocomplete.js', 'jquery.facelist.js', 'jquery.tools.min.js', 'application.js', 'jquery-ui-1.7.2.custom.min.js'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  %body
    #header= render :partial => '/shared/header'
    #body
      .container
        - flash.each do |key, value|
          %div{:class => key}= h(value)
        = yield  
        #footer= render :partial => '/shared/footer'
      .overlay#overlay
        %image{:src => "/images/how_are_you_feeling.png"}/
        %br/
        #overform1
          %image{:id => 'smiley1', :src => "/images/healthy.png",:style=>"float:left"}/
          %image{:id => 'smiley2', :src => "/images/unhealthy.png", :style => "float:left"}/
          %image{:id => 'smiley3', :src => "/images/sick.png"}/
        #overform2{:style=>'display:none'}
          %form{:action => '/statuses.json', :method => :post, :id => 'status'}
            %label{:for => "symptoms1"} Fever
            %input{:type => "checkbox", :id => "symptoms1", :name => "symptoms[fever]"}
            %label{:for => "symptoms2"} Headache
            %input{:type => "checkbox", :id => "symptoms2", :name => "symptoms[headache]", "value" => "headache"}
            %label{:for => "symptoms3"} Abnormal Tiredness
            %input{:type => "checkbox", :id => "symptoms3", :name => "symptoms3", "value" => "tiredness"}
            %label{:for => "symptoms4"} Cough
            %input{:type => "checkbox", :id => "symptoms4", :name => "symptoms4", "value" => "cough"}
            %label{:for => "symptoms5"} Sore Throat
            %input{:type => "checkbox", :id => "symptoms5", :name => "symptoms5", "value" => "sorethroat"}
            %label{:for => "symptoms6"} Runny or Stuffy Nose
            %input{:type => "checkbox", :id => "symptoms6", :name => "symptoms6", "value" => "runnynose"}
            %label{:for => "symptoms7"} Body Aches
            %input{:type => "checkbox", :id => "symptoms7", :name => "symptoms7", "value" => "aches"}
            %label{:for => "symptoms8"} Diarrhea, nausea, and/or vomitting
            %input{:type => "checkbox", :id => "symptoms8", :name => "symptoms8", "value" => "digestive"}
            %input{:type => "hidden", :value => "true", :name => 'feeling_sick'}
            %input{:type => "submit", :value => "Submit"} 

